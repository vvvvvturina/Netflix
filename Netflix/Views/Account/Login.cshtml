@model Netflix.ViewModels.LoginModel

<link href = "~/css/auth.css" rel="Stylesheet" type="text/css" />

<div class="container">
  <img src="http://assets.stickpng.com/images/580b57fcd9996e24bc43c529.png">
  <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
      <div class="validation" asp-validation-summary="ModelOnly"></div>
      <div>
          <div class="form-group">
              <label asp-for="Email">Введите Email</label><br />
              <input type="text" asp-for="Email" placeholder="Email" />
              <span asp-validation-for="Email" />
          </div>
          <div class="form-group">
              <label asp-for="Password">Введите пароль</label><br />
              <input asp-for="Password" placeholder="Password" />
              <span asp-validation-for="Password" />
          </div>
          <div class="form-group">
              <input class="auth-button" type="submit" value="Войти" class="btn btn-outline-dark" />
          </div>
      </div>
  </form>
  <a asp-action="Register" asp-controller="Account">Еще не зарегистрированы?</a>
  <a class="forgot-password">Восстановить пароль</a>
</div>


 
